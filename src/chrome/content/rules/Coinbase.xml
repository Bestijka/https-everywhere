<ruleset name="Coinbase (partial)">

	<target host="coinbase.com" />
	<target host="*.coinbase.com" />


	<securecookie host="^\.?coinbase\.com$" name=".+" />


	<rule from="^http://(www\.)?coinbase\.com/"
		to="https://$1coinbase.com/" />

</ruleset>