<!--
	For other SWITCH coverage, see Switch.ch.xml.


	Problematic subdomains:

		- ^	(cert only matches www)

-->
<ruleset name="NIC.ch">

	<target host="nic.ch" />
	<target host="www.nic.ch" />


	<securecookie host="^www\.nic\.ch$" name=".+" />


	<rule from="^http://(?:www\.)?nic\.ch/"
		to="https://www.nic.ch/" />

</ruleset>