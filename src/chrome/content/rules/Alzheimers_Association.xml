<!--
	Problematic subdomains:

		- ^	(cert only matches www)

-->
<ruleset name="Alzheimer's Association">

	<target host="alz.org" />
	<target host="www.alz.org" />


	<securecookie host="^www\.alz\.org$" name=".+" />


	<rule from="^http://(?:www\.)?alz\.org/"
		to="https://www.alz.org/" />

</ruleset>