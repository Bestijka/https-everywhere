<!--
	Fully covered subdomains:

		- (www.)
		- account
		- join

-->
<ruleset name="Jolla.com">

	<target host="jolla.com" />
	<target host="*.jolla.com" />


	<securecookie host="^(?:.*\.)?jolla\.com$" name=".+" />


	<rule from="^http://((?:account|join|www)\.)?jolla\.com/"
		to="https://$1jolla.com/" />

</ruleset>